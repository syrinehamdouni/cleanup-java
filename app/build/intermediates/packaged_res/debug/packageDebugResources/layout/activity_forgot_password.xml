<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pagebkg2"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".SignUpActivity"
        tools:layout_editor_absoluteY="80dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text="Entrez l'adresse e-mail associé à votre compte"
            android:textColor="@color/ball_color_4_end"
            android:textSize="18sp"
            android:translationY="178dp"
        />

        <TextView
            android:id="@+id/message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:text="@string/message_text"
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            android:translationY="166dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_border"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Adresse email"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHighlight="@color/cardview_dark_background"
            android:textColorHint="#FFFFFF"
            android:translationY="150dp" />

        <Button
            android:id="@+id/ForgotButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:fontFamily="@font/poppins_semibold"
            android:text="Envoyer"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:translationY="150dp"
            app:cornerRadius="20dp" />
        <TextView
            android:id="@+id/loginRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_text"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/ball_color_6_start"
            android:textSize="18sp"
            android:translationY="170dp"
            />
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>